{
  "compilerOptions": {
  	"target": "es5",
  	"module": "commonjs",
  	"declaration": true,
    "removeComments": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  	"sourceMap": true,
    "inlineSources": true,
    "rootDir": ".",
  	"outDir": "compiled/ngc",
    "pretty": true,
    "stripInternal": false,
    "lib": ["es6", "dom"],
    "types": [
      "node", "jasmine"
    ],
    "moduleResolution": "node",
    "paths": {
      "angular2-express-engine": [
        "./modules/express-engine"
      ],
      "angular2-platform-node": [
        "./modules/platform-node"
      ],
      "platform-node/*": [
        "./modules/platform-node/*.ts"
      ],
      "platform-node": [
        "./modules/platform-node"
      ],
      "angular2-universal/browser": [
        "./modules/universal/browser"
      ],
      "angular2-universal/node": [
        "./modules/universal/node"
      ],
      "angular2-universal": [
        "./modules/universal"
      ],
      "angular2-hapi-engine": [
        "./modules/hapi-engine/src/index.ts"
      ]
    }
  },
  "exclude": [
    "examples",
    "node_modules",
    "compiled",
    "dist",
    "build-utils.ts",
    "build-utils.spec.ts",
    "gulpfile.ts"
  ],

  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false },
  "angularCompilerOptions": {
    "genDir": "compiled/ngfactory"
  }
}
